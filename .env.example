NODE_ENV=production

# Redis Configuration for Centralized Caching
# Format: redis://[:password@]host[:port][/db-number]
# Example: redis://localhost:6379
# Example with auth: redis://:mypassword@localhost:6379
# If not set, Next.js will fall back to default caching behavior
REDIS_URL=redis://localhost:6379

# Revalidation Secret for Pages Router API
# Used by /api/revalidate-pages to prevent unauthorized cache purging
# Generate a secure random string for production
REVALIDATION_SECRET=your-secret-token-here

# Next.js Cache Debug (optional)
NEXT_PRIVATE_DEBUG_CACHE=1